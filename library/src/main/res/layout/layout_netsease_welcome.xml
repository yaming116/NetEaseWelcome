<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <me.shenfan.neteasewelcome.ProportionFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:widthWeight="30"
        app:heightWeight="41">

        <com.commit451.foregroundviews.ForegroundImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/test"
            android:fitsSystemWindows="true"
            android:scaleType="fitXY"/>

    </me.shenfan.neteasewelcome.ProportionFrameLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:minWidth="32sp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/netease_welcome_skip"
        android:background="@drawable/btn_netease_welcome_skip"
        android:textColor="@android:color/white"
        android:layout_gravity="top|right"
        android:layout_margin="32dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:minHeight="200dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </FrameLayout>

</FrameLayout>